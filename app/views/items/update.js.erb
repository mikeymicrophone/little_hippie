$('#price_<%= @item.id %>').text('<%= escape_javascript number_to_currency @item.cost %>');
$('#total_price').text('<%= escape_javascript number_to_currency @item.cart.total %>');
$('#discounted_total_price').text('<%= escape_javascript number_to_currency @item.cart.subtotal_after_coupon %>');
$('#shipping_price').text('<%= escape_javascript number_to_currency @item.cart.shipping_charge %>');
$('#discount_amount_display').text('<%= escape_javascript number_to_currency @item.cart.discount_amount %>');
$('#subtotal_display').text('<%= escape_javascript number_to_currency @item.cart.subtotal %>');

<% if @item.quantity < 1 %>
  $('div#item_<%= @item.id %> .remove a').trigger('click');
<% end %>
recheck_inventory();
