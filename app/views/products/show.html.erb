<h2><%= link_to 'Display', detail_product_path(@product) %></h2>

<p>
  <b>Design:</b>
  <%= link_to_name @product.design %>
</p>

<p>
  <b>Body style:</b>
  <%= link_to_name @product.body_style %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
  <b>Copy:</b>
  <%= @product.copy %>
</p>

<p>
  <b>Code:</b>
  <%= @product.code %>
</p>

<p>
  <b>Active:</b>
  <%= @product.active %>
</p>

<%= form_tag generate_image_product_path(@product) do %>
  <%= text_field_tag :left_offset, nil, :placeholder => 'Left Offset' %><br>
  <%= text_field_tag :top_offset, nil, :placeholder => 'Top Offset' %><br>
  <%= text_field_tag :scale, nil, :placeholder => 'Scale' %><br>
  <%= submit_tag 'Generate Image' %>
<% end %>
<%#= link_to 'generate image from body style and design', generate_image_product_path(@product), :method => :post %><br>
<%= link_to image_tag('edit_button.gif'), edit_product_path(@product) %> |
<%= link_to image_tag('back_button.gif'), products_path %>

<% @product_colors.each do |product_color| %>
  <%= div_for product_color do %>
		<% product_color.product_images.each do |image| %>
		  <%= image_tag image.image_url, :height => 100 if image.image.present? %>
		<% end %>
    <%= link_to_name product_color %>
  <% end %>
<% end %>
<br>
<%= link_to 'add colors', add_colors_for_product_path(@product), :remote => true %>
