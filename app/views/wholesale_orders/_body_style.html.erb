<%= link_to body_style_wholesale_orders_path(body_style, :category_id => category.id), :remote => true, :class => 'wholesale_group', :id => dom_id(body_style, :group_thumbnail_for) do %>
  <%= div_for body_style, :wholesale_product_group_for do %>
    <%= image_tag body_style.image, :class => 'wholesale_thumb' if body_style.image.present? %><br>
