<div id="banner">
  <%= image_tag Banner.find_by_name('Big Primary Banner').image if Banner.find_by_name('Big Primary Banner').andand.image.present? %>
</div>
  <div class="category" id="featured_items_banner">
    <div class="label_for_category">Featured Items</div>
    <%= image_tag Banner.find_by_name('Featured Items Banner').image if Banner.find_by_name('Featured Items Banner').andand.image.present? %>
  </div>
<div id="product-categories">
  <% @categories.each do |category| %>
    <%= div_for category do %>
      <%= div_for category, :label_for do %>
        <%= link_to category.name, category_path(category.slug) %>
      <% end %>
      <%= link_to image_tag(category.active_image.image), category_path(category.slug) if category.active_image.present? %>
    <% end %>
  <% end %>
	<% @categories_second_tier.each do |category| %>
    <%= div_for category do %>
      <%= div_for category, :label_for do %>
        <%= link_to category.name, detail_category_path(category) %>
      <% end %>
      <%= link_to image_tag(category.active_image.image), detail_category_path(category) if category.active_image.present? %>
    <% end %>
  <% end %>
</div>
<%= clearboth %>
<div id="news_title" class="news_title_background">News & updates from Little Hippie!</div>
<div id="news-bulletins">
  <% @bulletins.each do |bulletin| %>
    <%= div_for bulletin do %>
      <header><%= bulletin.title %></header>
      <article><%= bulletin.content %></article>
    <% end %>
  <% end %>
</div>
<%= clearboth %>

