<h1>Listing banners</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @banners.each do |banner| %>
  <tr>
    <td><%= banner.name %></td>
    <td><%= banner.image %></td>
    <td><%= link_to 'Show', banner %></td>
    <td><%= link_to image_tag(asset_path('edit_button.gif')), edit_banner_path(banner) %></td>
    <td><%= link_to image_tag(asset_path('X_button.gif')), banner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Banner', new_banner_path %>
