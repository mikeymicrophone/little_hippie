<p id="notice"><%= notice %></p>

<p>
  <b>Supplier:</b>
  <%= link_to_name @garment_purchase_order.supplier %>
</p>

<p>
  <b>Billing address:</b>
  <%= @garment_purchase_order.billing_address.andand.street %>
</p>

<p>
  <b>Shipping address:</b>
  <%= @garment_purchase_order.shipping_address.andand.street %>
</p>


<div class="quantities">
  <% @garment_purchase_order.quantities.each do |quantity| %>
    <%= div_for quantity do %>
      <%= link_to_name quantity.stock %>
      (<%= quantity.purchased %>)
    <% end %>
  <% end %>
  <%= link_to '+', new_garment_purchase_order_quantity_path(@garment_purchase_order), :remote => true %>
</div>
<div id="add_quantity">
  
</div>

<%= link_to 'Edit', edit_garment_purchase_order_path(@garment_purchase_order) %> |
