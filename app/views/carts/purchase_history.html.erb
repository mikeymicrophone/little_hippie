<% if @carts.empty? %>
	You have not yet shopped with us.
<% else %>
  <% @carts.each do |cart| %>
    <%= div_for cart do %>
      <%= cart.created_at.strftime("%m/%d/%y") %>:
			<%= cart.status %><br>
			<% cart.items.each do |item| %>
			  <%= item.name %>
			  <%= "x#{item.quantity}" if item.quantity > 1 %>
			  <%= number_to_currency item.cost %>
			<% end %>
    <% end %>
  <% end %>
<% end %>
