$('#total_price').text('<%= escape_javascript number_to_currency @cart.total_before_sale %>');
$('#discounted_total_price').text('<%= escape_javascript number_to_currency @cart.total_after_coupon %>');
$('#shipping_price').text('<%= escape_javascript number_to_currency @cart.shipping_charge %>');
<% if params[:country_id] && params[:country_id].to_i.!=(Country.united_states.id) %>
  $('#shipping_method').prop('disabled', 'disabled');
<% else %>
  $('#shipping_method').prop('disabled', false);
<% end %>
