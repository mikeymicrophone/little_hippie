<h1>Sizes</h1>
<%= link_to 'New Size', new_size_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sizes.each do |size| %>
  <tr>
    <td><%= link_to_name size %></td>
    <td><%= size.code %></td>
    <td><%= link_to 'up', move_up_size_path(size), :method => :put %></td>
    <td><%= link_to 'edit', edit_size_path(size) %></td>
    <td><%= link_to 'x', size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
