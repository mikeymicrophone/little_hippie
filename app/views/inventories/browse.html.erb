  <div id="most_popular_title" class="most_popular_title">Customer Favorites</div>
  <%= link_to '#photo_uploader', :class => 'fancybox' do %>
    <div id="customer_upload_button">Upload Your Photo!</div>
  <% end %>
  <%= clearboth %>
  <div id="popular_products" class="category_of_products">
    <% @popular_products.each do |product_color| %>
      <%= product_display_box product_color %>
    <% end %>
