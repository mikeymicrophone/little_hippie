<table>
  <% @links.each do |link| %>
    <tr>
      <td><%= link.display_text %></td>
      <td><%= link.href %></td>
      <td><%= link.active %></td>
      <td><%= link.position %></td>
      <td>
        <%= link_to image_tag('up_button.gif'), move_up_link_path(link), :method => :put %>
        <%= link_to image_tag('down_button.gif'), move_down_link_path(link), :method => :put %>
        <%= link_to image_tag('edit_button.gif'), edit_link_path(link) %>
        <%= link_to image_tag('X_button.gif'), link, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to 'New Link', new_link_path %>
