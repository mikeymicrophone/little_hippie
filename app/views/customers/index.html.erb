<h1>Listing customers</h1>

<table>
  <tr>
    <th><%= link_to 'Email', :sort => 'email' %></th>
    <th></th>
    <th></th>
    <th><%= link_to 'New Customer', new_customer_path %></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.email %></td>
    <td><%= customer.last_name %></td>
    <td><%= link_to 'Show', admin_show_customer_path(customer) %></td>
    <td>
      <%= link_to image_tag('edit_button.gif'), edit_customer_path(customer) %>
      <%= link_to image_tag('X_button.gif'), customer, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @customers %>