<h1>Listing items</h1>

<table>
  <tr>
    <th>Cart</th>
    <th>Product color</th>
    <th>Size</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.cart %></td>
    <td><%= item.product_color %></td>
    <td><%= item.size %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= button_to 'x', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

