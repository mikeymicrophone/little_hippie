<%= div_for product, :wholesale_items_for do %>
  <%= div_for product, :design_for do %>
    <h4><%= product.design.name %></h4>
    <%= image_tag product.design.art_url(:enlargement) %>
  <% end %>
  <table>
    <% product.product_colors.each do |product_color| %>
      <%= content_tag_for :tr, product_color do %>
        <td><%= image_tag product.primary_image(:email_receipt), :style => "background-color: ##{product_color.color.css_hex_code};" %></td>
        <td><%= product_color.color.name %></td>
        <% product_color.garments.of_color(product_color.color_id).each do |garment| %>
          <td>
            <%= garment.size.name %><br>
            <%= text_field_tag :quantity, nil, :length => 4 %>
          </td>
        <% end %>
      <% end %>
    <% end %>
  </table>
<% end %>