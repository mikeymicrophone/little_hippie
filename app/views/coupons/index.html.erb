<h1>Listing coupons</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Amount</th>
    <th>Percentage</th>
    <th>Free Shipping</th>
    <th>Lower limit</th>
    <th>Upper limit</th>
    <th>Valid date</th>
    <th>Expiration date</th>
    <th>Currently Valid?</th>
    <th>Charges discounted</th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.name %></td>
    <td><%= coupon.code %></td>
    <td><%= coupon.amount %></td>
    <td><%= coupon.percentage %></td>
    <td><%= coupon.free_shipping %></td>
    <td><%= coupon.lower_limit %></td>
    <td><%= coupon.upper_limit %></td>
    <td><%= coupon.valid_date %></td>
    <td><%= coupon.expiration_date %></td>
    <td><%= coupon.valid_on_this_date? %></td>
    <td><%= link_to pluralize(coupon.charges.count, 'charge'), coupon_charges_path(coupon) %></td>
    <td><%= link_to 'Show', coupon %></td>
    <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
    <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Coupon', new_coupon_path %>
