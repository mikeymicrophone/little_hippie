<h1>Listing credit_cards</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Stripe customer</th>
    <th>Status</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @credit_cards.each do |credit_card| %>
  <tr>
    <td><%= link_to_name credit_card.customer %></td>
    <td><%= link_to credit_card.stripe_customer_id, "https://manage.stripe.com/test/customers/#{credit_card.stripe_customer_id}" %></td>
    <td><%= credit_card.status %></td>
    <td><%= credit_card.position %></td>
    <td><%= link_to 'Show', credit_card %></td>
    <td><%= link_to image_tag(asset_path('edit_button.gif')), edit_credit_card_path(credit_card) %></td>
    <td><%= link_to image_tag(asset_path('X_button.gif')), credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

