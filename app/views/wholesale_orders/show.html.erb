<p id="notice"><%= notice %></p>

<p>
  <b>Reseller:</b>
  <%= @wholesale_order.reseller_id %>
</p>

<p>
  <b>Shipping address:</b>
  <%= @wholesale_order.shipping_address_id %>
</p>

<p>
  <b>Status:</b>
  <%= @wholesale_order.status %>
</p>

<%= number_to_currency @wholesale_order.dollar_price %><br>

<table>
  <% @wholesale_order.wholesale_items.each do |wholesale_item| %>
    <%= content_tag_for :tr, wholesale_item do %>
      <td>[<%= wholesale_item.garment.inventory_amount%> in stock]</td>
      <td><%= wholesale_item.quantity %>x</td>
      <td><%= wholesale_item.garment.name %></td>
    <% end %>
  <% end %>
</table>

<%= number_to_currency @wholesale_order.dollar_price %><br>

<%= link_to 'Edit', edit_wholesale_order_path(@wholesale_order) %> |
<%= link_to 'Back', wholesale_orders_path %>
