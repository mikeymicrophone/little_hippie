<%= form_for @reseller do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :url %><br>
  <%= f.text_field :url %><br>
  <%= f.label :tax_id %><br>
  <%= f.text_field :tax_id %><br>
  <%= f.label :current_discount_percentage %><br>
  <%= f.text_field :current_discount_percentage %><br>
  <%= f.label :note %><br>
  <%= f.text_area :note %><br>
  <%= f.label :delay_payment, "Authorized for delayed/alternate payment" %>(Note - this will prevent the site from billing this reseller)<br>
  <%= f.check_box :delay_payment %><br>
  <%= f.label :sees_inventory %><br>
  <%= f.check_box :sees_inventory %><br>
  <%= f.label :can_buy_blankets %><br>
  <%= f.check_box :can_buy_blankets %><br>
  <%= f.submit %>
<% end %>
