<h1>Listing design_features</h1>

<table>
  <tr>
    <th>Design</th>
    <th>Position</th>
    <th>Active from</th>
    <th>Active until</th>
    <th>Business manager</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @design_features.each do |design_feature| %>
  <tr>
    <td><%= link_to_name design_feature.design %></td>
    <td><%= design_feature.position %></td>
    <td><%= design_feature.active_from %></td>
    <td><%= design_feature.active_until %></td>
    <td><%= design_feature.business_manager_id %></td>
    <td><%= link_to 'Show', design_feature %></td>
    <td>
      <%= link_to image_tag(asset_path('up_button.gif')), move_up_design_feature_path(design_feature), :method => :put %>
      <%= link_to image_tag(asset_path('down_button.gif')), move_down_design_feature_path(design_feature), :method => :put %>
      <%= link_to image_tag(asset_path('edit_button.gif')), edit_design_feature_path(design_feature) %>
      <%= link_to image_tag(asset_path('X_button.gif')), design_feature, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

