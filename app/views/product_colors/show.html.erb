<p>
  <%= image_tag @product_color.product.primary_image, :style => "background-color: ##{@product_color.color.css_hex_code}" %>
</p>

<p>
  <%= link_to 'Display', detail_product_path(@product_color.product) %>
  <%= link_to 'Old Glory Display', @product_color.old_glory_url %>
</p>

<p>
  <b>Design:</b>
  <%= link_to_name @product_color.design %>
</p>

<p>
  <b>Body Style:</b>
  <%= link_to_name @product_color.body_style %>
</p>

<p>
  <b>Product:</b>
  <%= link_to_name @product_color.product %>
</p>

<p>
  <b>Color:</b>
  <%= link_to_name @product_color.color %>
</p>

<p>
  <% @product_color.category_product_features.each do |feature| %>
    <%= link_to_name feature %>
  <% end %>
</p>

<p>
  Placed in cart <%= @product_color.items.count %> times.
</p>

<%= link_to image_tag('edit_button.gif'), edit_product_color_path(@product_color) %> |
<%= link_to image_tag('back_button.gif'), product_colors_path %>

<%= link_to 'new product image', new_product_image_path(:product_image => {:product_color_id => @product_color.id}) %>
<div>
  <% @product_color.product_images.each do |image| %>
    <%= link_to image_tag(image.image_url, :width => 100), image if image.image_url.present? %>
  <% end %>
</div>

<% @product_color.garments_of_this_color.each do |garment| %>
  <%= link_to garment.size.name, garment %>
  <%= link_to garment.inventory_amount, garment.inventory %><br>
<% end %>
