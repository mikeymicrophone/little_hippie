<h1>Listing inventories</h1>

<table>
  <tr>
    <th>Product color</th>
    <th>Size</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @inventories.each do |inventory| %>
  <tr>
    <td><%= link_to_name inventory.product_color %></td>
    <td><%= link_to_name inventory.size %></td>
    <td><%= inventory.amount %></td>
    <td><%= link_to 'Show', inventory %></td>
    <td>
      <%= link_to image_tag('edit_button.gif'), edit_inventory_path(inventory) %>
      <%= link_to image_tag('X_button.gif'), inventory, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Inventory', new_inventory_path %>
