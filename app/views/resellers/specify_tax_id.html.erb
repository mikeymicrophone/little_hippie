Please specify your Tax ID and business credentials.
<%= form_for current_reseller, :url => update_tax_id_reseller_path(current_reseller) do |f| %>
  <%= f.label :tax_id, 'Enter your Tax ID here.' %>
  <%= f.text_field :tax_id %><br><br>
  <%= f.label :name, 'Your full name' %>
  <%= f.text_field :name %><br><br>
  <%= f.label :business_name %>
  <%= f.text_field :business_name %><br><br>
  <%= f.label :url, 'Your web site' %>
  <%= f.text_field :url %><br><br>
  <%= f.label :delivery_address, 'And your business address.' %>
  <%= f.fields_for :delivery_address_attributes, DeliveryAddress.new do |da| %>
    <%= da.label :first_name %>  <%= da.text_field :first_name %><br>
    <%= da.label :last_name  %>  <%= da.text_field :last_name %><br>
    <%= da.label :company    %>  <%= da.text_field :company %><br>
    <%= da.label :email      %>  <%= da.text_field :email %><br>
    <%= da.label :phone      %>  <%= da.text_field :phone %><br>
    <%= da.label :street     %>  <%= da.text_field :street %><br>
    <%= da.label :street2    %>  <%= da.text_field :street2 %><br>
    <%= da.label :city       %>  <%= da.text_field :city %><br>
    <%= da.label :state_id   %>  <%= da.select :state_id, options_from_collection_for_select(Country.united_states.states.alphabetical, :id, :name), :include_blank => true %><br>
    <%= da.label :country_id %>  <%= da.select :country_id, options_from_collection_for_select(Country.alphabetical, :id, :name), :include_blank => true %><br>
    <%= da.label :zip        %>  <%= da.text_field :zip %><br>
  <% end %>
  
  <%= f.submit 'Save' %>
<% end %>
