<div id="banner">
  <%= image_tag Banner.find_by_name('Big Primary Banner').image %>
</div>
<div id="caption-middle">
  <%= @page.content %><br>
  <%= link_to 'Browse by Style', browse_body_styles_path %> - <%= link_to 'Browse by Design', browse_designs_path %>
</div>
<div id="product-categories">
  <% @categories.each do |category| %>
    <%= div_for category do %>
      <%= div_for category, :label_for do %>
        <%= link_to category.name, detail_category_path(category) %>
      <% end %>
      <%= link_to image_tag(category.active_image.image), detail_category_path(category) if category.active_image.present? %>
    <% end %>
  <% end %>

  <div class="category" id="featured">
	  <div class="label_for_category">Featured Items</div>
	  <%= image_tag Banner.find_by_name('Featured Items Banner').image %>
	</div>
	
	<div class="category" id="blankets">
		<div class="label_for_category">Blankets</div>
	</div>
	
	<div class="category" id="gift_certificates">
		<div class="label_for_category">Gift Certificates</div>
	</div>
</div>
<%= clearboth %>
<div id="news-bulletins">
  <% @bulletins.each do |bulletin| %>
    <%= div_for bulletin do %>
      <header><%= bulletin.title %></header>
      <article><%= bulletin.content %></article>
    <% end %>
  <% end %>
</div>
