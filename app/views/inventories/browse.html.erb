<div id="homepage_holder">
  <div id="homepage_news">
    <div id="news_title" class="news_title_background">News &amp; updates from Little Hippie</div>
    <div id="news_bulletins">
      <% @bulletins.each do |bulletin| %>
        <%= div_for bulletin do %>
          <header><%= link_to bulletin.title, detail_bulletin_path(bulletin) %></header>
          <div class="bulletin_like_count"><%= pluralize(bulletin.likes.count, 'like') %></div>
          <article>
            <div class="facebook_image">
              <%= image_tag(bulletin.facebook_image_url) if bulletin.facebook_image_url? %>
            </div>
            <%= bulletin.teaser %>
            <%= link_to 'read more', detail_bulletin_path(bulletin) %>
          </article>
          <%= clearboth %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div id="homepage_banners">
    <div class="category" id="featured_items_banner1">
      <%= link_to(image_tag(Banner.find_by_name('Featured Items Banner 1').image), Banner.find_by_name('Featured Items Banner 1').link) if Banner.find_by_name('Featured Items Banner 1').andand.image.present? %>
    </div>
     <%= clearboth %>
     <div class="small_features" id="small_features">
     <div class="category" id="featured_items_banner2">
      <%= link_to(image_tag(Banner.find_by_name('Featured Items Banner 2').image), Banner.find_by_name('Featured Items Banner 2').link) if Banner.find_by_name('Featured Items Banner 2').andand.image.present? %>
    </div>
        <div class="category" id="featured_items_banner3">
      <%= link_to(image_tag(Banner.find_by_name('Featured Items Banner 3').image), Banner.find_by_name('Featured Items Banner 3').link) if Banner.find_by_name('Featured Items Banner 3').andand.image.present? %>
    </div>
  </div>
  </div>
    <%= clearboth %>
        <div class="category" id="square_banners">
    <div id="square_banner1">
      <%= link_to(image_tag(Banner.find_by_name('Square Banner 1').image), Banner.find_by_name('Square Banner 1').link) if Banner.find_by_name('Square Banner 1').andand.image.present? %>
    </div>
    <div id="square_banner2">
      <%= link_to(image_tag(Banner.find_by_name('Square Banner 2').image), Banner.find_by_name('Square Banner 2').link) if Banner.find_by_name('Square Banner 2').andand.image.present? %>
    </div>
       <div id="square_banner3">
      <%= link_to(image_tag(Banner.find_by_name('Square Banner 3').image), Banner.find_by_name('Square Banner 3').link) if Banner.find_by_name('Square Banner 3').andand.image.present? %>
    </div>
       <div id="square_banner4">
      <%= link_to(image_tag(Banner.find_by_name('Square Banner 4').image), Banner.find_by_name('Square Banner 4').link) if Banner.find_by_name('Square Banner 4').andand.image.present? %>
    </div>
  </div>

</div>