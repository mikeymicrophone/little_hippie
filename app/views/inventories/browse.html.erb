<div id="homepage_holder">
  <div id="homepage_banners">
    <div class="category carousel slide" id="featured_items_banner1">
      <div class="carousel-inner">
        <% Banner.order(:position).find_all_by_name('Featured Items Banner 1').each_with_index do |banner, index| %>
          <div class="item <%= 'active' if index == 0 %>">
            <%= link_to(image_tag(banner.image), banner.link) if banner.image.present? %>
          </div>
        <% end %>
      </div>
      <div class="pause_button"><%= image_tag asset_path('pause_button.png') %></div>
    </div>
  </div>
  <%= clearboth %>
 
